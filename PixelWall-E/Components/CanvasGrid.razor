@inject IJSRuntime jsRuntime
@using SixLabors.ImageSharp
@using SixLabors.ImageSharp.PixelFormats

<div style="width: @(Size)px; height: @(Size)px; overflow: hidden; border: 1px solid gray;">                                                                            
        @if (imageDataUrl != null)
        {
        <img id="image" src="@imageDataUrl"
                style="image-rendering: pixelated; width: 100%; height: 100%; display: block;" />
        }
        else
        {
                <p>Cargando imagen...</p>
        }
</div>

<input @ref="_numberOfPixels"
        type="int" />
<button @onclick="ChangeNumberOfPixels" class="btn btn-primary">Resize</button>